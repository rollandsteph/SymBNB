{% extends 'base.html.twig' %}
{% block title %}
    Modification d'un commentaire
{% endblock %}

{% block body %}
    <div class="container">
        <h1>modification du commentaire : {{comment.id}}</h1>
        <div class="alert alert-success">
        <p>Annonce liée :{{comment.annonce.title}}  </p>
        <p>auteur : <img class="avatar avatar-mini" src="{{comment.author.picture}}" alt="">  {{comment.author.fullName}}  </p>
        <p>Date de création :{{comment.createdAt|date('d-m-Y')}} </p>
        <p>Note donnée : {% include 'partials/rating.html.twig' with {'rating': comment.rating } %}  </p>
        </div>
        {{form_start(formComment)}}
        <div class="form-group">
            {{form_widget(formComment)}}
        </div>
        <button type="submit" class="btn btn-primary">Modifier le commentaire</button>
        {{form_end(formComment)}}
    </div>
{% endblock %}


{% block javascripts %}

<script src="/js/ad.js"></script>
<script src="https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js"></script>

{% endblock %}